// 背景图片
bg-image($url, $format)
  background-image: url($url + "@max." + $format)
  @media screen and (max-width: 640px)
    background-image: url($url + "@min." + $format)

// 不换行
no-wrap()
  text-overflow: ellipsis
  overflow: hidden
  white-space: nowrap

// 扩展点击区域
extend-click()
  position: relative
  &:before
    content: ''
    position: absolute
    top: -10px
    left: -10px
    right: -10px
    bottom: -10px
